<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmyApp.ModifyBeerPage"
             Title="Modify Beer">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Name:" />
            <Entry Text="{Binding Name}" x:Name="nameEntry" />

            <Label Text="Price:" />
            <Entry Text="{Binding Price}" x:Name="priceEntry" Keyboard="Numeric" />

            <Label Text="Average Rating:" />
            <Entry Text="{Binding Average, StringFormat='{0:F2}'}" x:Name="averageEntry" Keyboard="Numeric" />

            <Label Text="Number of Reviews:" />
            <Entry Text="{Binding Reviews}" x:Name="reviewsEntry" Keyboard="Numeric" />

            <Button Text="Save Changes" Clicked="SaveChanges_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

