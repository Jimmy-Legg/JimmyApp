<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JimmyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JimmyApp"
    Shell.TabBarIsVisible="True"
    Style="{StaticResource BaseStyle}">

    <Tab Title="Acceuil" Icon="accueil.png">
        <ShellContent ContentTemplate="{DataTemplate local:Page1}" />
    </Tab>

    <Tab Title="Bières" Icon="liste.png">
        <ShellContent ContentTemplate="{DataTemplate local:Page2}" />
    </Tab>

    <Tab Title="Ajouter" Icon="ajout.png">
        <ShellContent ContentTemplate="{DataTemplate local:Page3}" />
    </Tab>

    <Tab Title="Découvrir" Icon="random.png">
        <ShellContent ContentTemplate="{DataTemplate local:Page4}" />
    </Tab>

</Shell>
