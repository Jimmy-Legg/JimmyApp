<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmyApp.Page1">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Bienvenue sur l'application"
                FontSize="Large"
                HorizontalOptions="Center" />
            <Label
                Text="Application de Jimmy"
                FontSize="Medium"
                HorizontalOptions="Center" />
            <Button
                Text="Cliquez ici pour voir un gif"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />
            <HorizontalStackLayout>
                <Image
                    Source="banque.png"
                    Aspect="AspectFit" />
                <Image
                    Source="banqueenligne.png"
                    Aspect="AspectFit" />
            </HorizontalStackLayout>
            <Image
    Source="banqueenligne.png"
    Aspect="AspectFit" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
