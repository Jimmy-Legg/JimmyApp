<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmyApp.Page3">

    <StackLayout Padding="20">
        <Entry Placeholder="Beer Name" Text="{Binding BeerName}" />
        <Entry Placeholder="Price" Text="{Binding Price}" Keyboard="Numeric" />

        <Button Text="Pick Image" Command="{Binding PickImageCommand}" />
        <Label Text="{Binding ImagePath}" />

        <Button Text="Add Beer" Command="{Binding AddBeerCommand}" />
    </StackLayout>

</ContentPage>
